# .kv file implementation of the code


<textinp>:
    id: fourfunctoin
    padding: None
    spacing: None
    TextInput:
        id: input
        text: ''
        font_size: 32
        multiline: False
        size_hint: None, None
        size: 300, 75
        on_text: app.process("1", 1); output.text+= self.text; input.text = ''
        pos: 0, 300
    Label:
        id: output
        text: ''
        font_size: 32
        color: (0, 0, 0, 1)
        multiline: False
        size_hint: None, None
        size: 300, 75
        pos: 0, 300
    GridLayout:
        cols: 4
        pos: 0, 200
